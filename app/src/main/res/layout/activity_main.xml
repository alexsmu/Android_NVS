<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="byuie499.auto_nvs.MainActivity"
    android:orientation="vertical">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/fftGraph"
        android:layout_above="@+id/toggleVibration" />

    <!--<android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startstop"
        android:id="@+id/graph_toolbar"
        android:background="#AAAAAA"
        >
    </android.support.v7.widget.Toolbar>-->

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textOff="@string/noise"
        android:textOn="@string/noise"
        android:id="@+id/toggleNoise"
        android:tag="noise"
        android:checked="true"
        android:layout_toRightOf="@+id/toggleVibration"
        android:layout_toEndOf="@+id/toggleVibration"
        android:layout_above="@+id/startstop"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textOff="@string/vibration"
        android:textOn="@string/vibration"
        android:id="@+id/toggleVibration"
        android:tag="vibration"
        android:checked="true"
        android:layout_above="@+id/startstop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textOff="Measure"
        android:textOn="Measure"
        android:id="@+id/toggleMeasure"
        android:tag="measure"
        android:checked="true"
        android:layout_below="@+id/toggleVibration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="140dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textOff="@string/record"
        android:textOn="@string/stop"
        android:id="@+id/startstop"
        android:background="@drawable/toggle_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />



    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/xCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/toggleNoise"
        android:layout_toEndOf="@id/toggleNoise"
        android:layout_above="@id/startstop"
        android:text="X"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/yCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/xCheck"
        android:layout_toEndOf="@id/xCheck"
        android:layout_above="@id/startstop"
        android:text="Y"
        />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/zCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/yCheck"
        android:layout_toEndOf="@id/yCheck"
        android:layout_above="@id/startstop"
        android:text="Z"
        />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/startstop"
        android:layout_toEndOf="@id/startstop"
        android:layout_alignParentBottom="true"
        android:text="CLEAR"
        />

</RelativeLayout>